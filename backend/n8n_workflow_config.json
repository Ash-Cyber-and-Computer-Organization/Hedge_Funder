{
  "n8n_cloud": {
    "url": "https://ash1industries.app.n8n.cloud",
    "webhook_base": "https://ash1industries.app.n8n.cloud/webhook",
    "api_key": "your_n8n_api_key_here"
  },
  "environments": {
    "local": {
      "base_url": "http://localhost:5001",
      "description": "Local Flask API for development",
      "n8n_url": "http://localhost:5678"
    },
    "cloud": {
      "base_url": "https://your-ngrok-url.ngrok.io",
      "description": "Local backend exposed via ngrok",
      "n8n_url": "https://ash1industries.app.n8n.cloud"
    },
    "production": {
      "base_url": "https://your-vercel-app.vercel.app",
      "description": "Production Vercel deployment",
      "n8n_url": "https://ash1industries.app.n8n.cloud"
    }
  },
  "workflows": {
    "news_signal_workflow": {
      "name": "News Analysis & Signal Generation",
      "description": "Automated news fetching and signal generation",
      "schedule": "*/15 * * * *",
      "webhook_path": "/trading-signals",
      "endpoints": {
        "local": "http://localhost:5001/api/signals/generate",
        "cloud": "https://your-ngrok-url.ngrok.io/api/signals/generate",
        "production": "https://your-vercel-app.vercel.app/api/signals/generate"
      },
      "symbols": ["AAPL", "GOOGL", "MSFT", "TSLA", "NVDA"],
      "headers": {
        "Content-Type": "application/json"
      }
    },
    "risk_monitoring_workflow": {
      "name": "Risk Monitoring & Alerts",
      "description": "Monitor trading performance and send risk alerts",
      "schedule": "*/5 * * * *",
      "webhook_path": "/risk-alerts",
      "endpoints": {
        "local": "http://localhost:5001/api/monitoring/dashboard",
        "cloud": "https://your-ngrok-url.ngrok.io/api/monitoring/dashboard",
        "production": "https://your-vercel-app.vercel.app/api/monitoring/dashboard"
      },
      "headers": {
        "Content-Type": "application/json"
      }
    },
    "market_sentiment_workflow": {
      "name": "Market Sentiment Analysis",
      "description": "Analyze overall market sentiment from major indices",
      "schedule": "0 */2 * * *",
      "webhook_path": "/market-sentiment",
      "endpoints": {
        "local": "http://localhost:5001/api/news/analyze",
        "cloud": "https://your-ngrok-url.ngrok.io/api/news/analyze",
        "production": "https://your-vercel-app.vercel.app/api/news/analyze"
      },
      "symbol": "^GSPC",
      "headers": {
        "Content-Type": "application/json"
      }
    }
  },
  "setup_instructions": {
    "n8n_cloud_setup": [
      "1. Access your N8N cloud at: https://ash1industries.app.n8n.cloud",
      "2. Create new workflows using the templates in n8n_workflow_examples.json",
      "3. Set webhook URLs to: https://ash1industries.app.n8n.cloud/webhook/[path]",
      "4. Configure HTTP Request nodes to call your local backend via ngrok"
    ],
    "ngrok_setup": [
      "1. Install ngrok: npm install -g ngrok",
      "2. Start ngrok: ngrok http 5001",
      "3. Copy the ngrok URL (e.g., https://abc123.ngrok.io)",
      "4. Update the 'cloud' environment URLs in this file",
      "5. Update N8N workflows to use the ngrok URL"
    ],
    "local_development": [
      "1. Start local backend: python backend/n8n_api.py",
      "2. Start local N8N: n8n start (if needed)",
      "3. Test endpoints: curl http://localhost:5001/api/health"
    ],
    "telegram_setup": [
      "Create a Telegram bot using @BotFather",
      "Get your bot token and chat ID",
      "Add to .env: TELEGRAM_BOT_TOKEN and TELEGRAM_CHAT_ID",
      "Configure Telegram nodes in N8N workflows"
    ]
  }
}
